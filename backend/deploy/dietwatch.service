[Unit]
Description=DietWatch FastAPI Backend
After=network.target postgresql.service
Wants=postgresql.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/virtual-nutritionist/backend
Environment="PATH=/home/ubuntu/virtual-nutritionist/backend/venv/bin:/usr/bin"
EnvironmentFile=/home/ubuntu/virtual-nutritionist/backend/.env
ExecStart=/home/ubuntu/virtual-nutritionist/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
